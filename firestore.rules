rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users Collection Rules
    match /users/{userId} {
      // Anyone authenticated can read user documents (needed to check roles)
      allow read: if isAuthenticated();
      
      // Users can only create their own user document
      allow create: if isOwner(userId);
      
      // Users can update their own document, but cannot change their isAdmin status
      // Only admins can change isAdmin status
      allow update: if isOwner(userId) && 
                       request.resource.data.isAdmin == resource.data.isAdmin ||
                       isAdmin();
      
      // Only admins can delete user documents
      allow delete: if isAdmin();
    }
    
    // Google Accounts Collection Rules
    match /googleAccounts/{userId} {
      // Anyone authenticated can read google accounts (needed to check login history)
      allow read: if isAuthenticated();
      
      // Users can only create their own google account document
      allow create: if isOwner(userId);
      
      // Users can update their own document (for last login tracking)
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete google account documents
      allow delete: if isAdmin();
    }
    
    // Posts Collection Rules
    match /posts/{postId} {
      // All authenticated users can read posts
      // (Admins need to see all posts, promoters need to see their own)
      allow read: if isAuthenticated();
      
      // Only authenticated users can create posts
      // The post must have the creator's userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.status == 'pending' &&
                       request.resource.data.points == 0;
      
      // Only admins can update posts (for approval/rejection)
      // OR users can update their own pending posts
      allow update: if isAdmin() ||
                       (isOwner(resource.data.userId) && 
                        resource.data.status == 'pending' &&
                        request.resource.data.status == 'pending');
      
      // Users can delete their own posts if pending
      // Admins can delete any post
      allow delete: if isAdmin() ||
                       (isOwner(resource.data.userId) && 
                        resource.data.status == 'pending');
    }
    
    // Analytics Collection (Optional - for tracking)
    match /analytics/{docId} {
      // Only admins can read analytics
      allow read: if isAdmin();
      
      // System can write analytics (or admins)
      allow write: if isAdmin();
    }
    
    // Settings Collection (Optional - for app configuration)
    match /settings/{docId} {
      // Everyone can read settings
      allow read: if isAuthenticated();
      
      // Only admins can modify settings
      allow write: if isAdmin();
    }
  }
}
